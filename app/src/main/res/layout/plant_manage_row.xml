<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plant_container"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/plant_row_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/macLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAC: 00:00:00:00:00:00"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:layout_weight="1"
                android:background="#9EEC1407"
                android:text="LÃ¶schen"
                android:textSize="15sp" />

            <Button
                android:id="@+id/waterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_weight="1"
                android:background="#1E5DCA"
                android:text="Giessen"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>